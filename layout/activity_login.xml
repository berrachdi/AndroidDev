<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
        android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/authstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Veuillez vous authentifier "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/authInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <EditText
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="login"/>
        <EditText
            android:id="@+id/passText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="password"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible">
       <Button
           android:id="@+id/login"
           android:layout_width="200dp"
           android:layout_height="50dp"
           android:text="ok"
          />
        <Button
            android:id="@+id/singup"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Singup"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioEtudiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Etudiant"
                    android:onClick="onRadioButtonClicked"
                    />
                <RadioButton
                    android:id="@+id/radioProfesseur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professeur"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>
            <EditText
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nom"/>
            <EditText
                android:id="@+id/prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Prenom"/>

                <LinearLayout
                    android:id="@+id/zoneEtudiant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radioiwim1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IWIM_1A"/>
                        <RadioButton
                            android:id="@+id/radioiwim2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IWIM_2A"/>
                        <RadioButton
                            android:id="@+id/radioiwim3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IWIM_3A"/>

                    </RadioGroup>
                    <EditText
                        android:id="@+id/cne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CNE"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/zoneProfesseur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible"
                >
                <EditText
                    android:id="@+id/departement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departement"/>
                <EditText
                    android:id="@+id/gsm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:text="GSM"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmer"
                />



        </LinearLayout>
    <LinearLayout
        android:id="@+id/actualites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:gravity="center">
        <ImageButton
            android:id="@+id/boite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:src="@drawable/sharp_email_black_48"

            />
        <ImageButton
            android:id="@+id/scolarite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:src="@drawable/sharp_school_black_48"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/deconnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <Button
            android:id="@+id/singout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Singout"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>
